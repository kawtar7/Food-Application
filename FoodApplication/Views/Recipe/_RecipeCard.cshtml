@model IEnumerable<FoodApplication.Models.Recipe>
@foreach(var recipe in Model)
{
    <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4 mb-3">
        <div class="shadow rounded">
            <div class="card dishCard p-2">
                <img src="@recipe.Image_url" class="card-img-top h-50 " />
                <div class="card-body">
                    <p class="card-title fw-bold fs-6 text-dark">
                     @recipe.Title
                     </p>
                    <span class="card-text">@recipe.Publisher</span>
                </div>
                <div>
                    <a href="/Recipe/Order?id=@recipe.Id" class="btn btn-sm btn-primary p-2">Order</a>
                </div>
            </div>
        </div>
    </div>
}